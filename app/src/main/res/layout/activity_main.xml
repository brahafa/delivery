<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bringit.orders.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_menu"
        android:padding="10dp"
        android:background="@color/gray_333333"
        android:layoutDirection="ltr"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.52"
            android:text="פיצה "
            android:gravity="center"
            android:layout_marginLeft="46dp"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/toggl"
            android:src="@mipmap/up3line2"
            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:layout_below="@+id/top_menu"
        android:layout_above="@+id/bottom_navigation"
        android:paddingTop="7dp"
        />

    <include  layout="@layout/menu_layout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_menu"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentRight="true"
        android:visibility="gone"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bottom_menu_line"
        android:layout_above="@+id/bottom_navigation"
        />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layoutDirection="ltr"

        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tab_history"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:src="@mipmap/history"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הסטוריה"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/red"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tab_orders"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:src="@mipmap/add"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הזמנות"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/red"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tab_timer"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                android:scaleType="fitCenter"
                android:src="@mipmap/timer"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="פתיחת יום"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/red"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/tab_statistic"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:showAsAction="always|withText"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:contextClickable="true"
                android:background="@drawable/bottom_menu_back"
                android:src="@mipmap/timer"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="סטטיסטיקה"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/red"
                />
        </LinearLayout>


    </LinearLayout>

