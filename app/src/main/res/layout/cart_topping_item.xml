            >

            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/whitequarterpizza14acart"
                android:id="@+id/tr"
                android:tag="gray"


                />
            <ImageView
                android:layout_width="wrap_content"
