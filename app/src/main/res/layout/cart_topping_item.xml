                android:src="@mipmap/whitequarterpizza14ccart"
                android:id="@+id/tl"
                android:tag="gray"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/whitequarterpizza14dcart"
                android:id="@+id/bl"
                android:tag="gray"

                />


        </LinearLayout>

        <LinearLayout
