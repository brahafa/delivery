<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ליצירת קשר עם ברינגיט טכנולוגיות"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טלפון: 050-3006222"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@mipmap/logo"
            android:layout_marginBottom="50dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/user_details_layout"
        android:visibility="gone"
        android:background="@drawable/popup_back"
        android:padding="25dp"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="צור קשר עם ברינגיט טכנולוגיות "
            android:gravity="center"
            android:id="@+id/title"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="שם פרטי:"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"

                />
            <EditText
                android:layout_width="0dp"
                android:hint="הכנס שם פרטי"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:id="@+id/f_name"
                android:background="@color/white"
                android:layout_height="20dp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="שם משפחה:"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:hint="הכנס שם משפחה"
                android:id="@+id/l_name"
                android:layout_height="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="טלפון:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="הכנס מספר טלפון"
                android:textSize="12sp"
                android:id="@+id/phone"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="number"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="דואר אלקטרוני:"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="הכנס דואר אלקטרוני"
                android:textSize="12sp"
                android:id="@+id/email"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="נושא"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:id="@+id/titleMsg"
                android:textColor="@color/black"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כתוב לנו:"
                android:textStyle="bold"
                android:textColor="@color/white"

                />
            <EditText
                android:layout_width="match_parent"
                android:height="100dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="top"
                android:padding="14dp"
                android:textSize="12sp"
                android:id="@+id/note"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:id="@+id/address"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:id="@+id/pizza_phone"
            android:gravity="center"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="שלח"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:id="@+id/send"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
